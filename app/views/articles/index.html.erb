<h1>Articles listing page</h1>
<table>
    <thead>
        <tr>
            <th>Title </th>

            <th>Description </th>

            <th colspan = "3">Actions </th>
        </tr>
    </thead>
    <tbody>
        <% @all_articles.each do |a| %>
            <tr>
                <td><%= a.title %></td>

                <td><%=a.description %> </td>

                <td><%= link_to 'Show', article_path(a) %></td>

                <td><%= link_to 'edit', edit_article_path(a) %></td>


                <td><%= button_to 'Delete', a, method: 'delete' , data: {confirm: "Are you Sure?"} %></td>
            </tr>
        <% end %>
    </tbody>
</table><br>

<p><%= link_to 'create', new_article_path %></p>
